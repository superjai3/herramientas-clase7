@model Seguroquesi.ViewModels.PolizaViewModel

@{
    ViewData["Title"] = "Crear Póliza";
}

<h1>Crear Póliza</h1>

<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Número de Cotización (correlativo, solo lectura) -->
            <div class="form-group">
                <label class="control-label">Número de Cotización</label>
                <input asp-for="NumeroCotizacion" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input asp-for="FechaInicio" class="form-control" type="date" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FechaFin" class="control-label"></label>
                <input asp-for="FechaFin" class="form-control" type="date" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>

            <!-- Tipo de Documento de Persona -->
            <div class="form-group">
                <label asp-for="TipoDocumentoPersona" class="control-label">Tipo de Documento</label>
                <select asp-for="TipoDocumentoPersona" class="form-control"
                    asp-items="Html.GetEnumSelectList<Seguroquesi.Enums.TipoDocumentoPersona>()"></select>
                <span asp-validation-for="TipoDocumentoPersona" class="text-danger"></span>
            </div>

            <!-- Número de Documento de Persona -->
            <div class="form-group">
                <label asp-for="NumeroDocumento" class="control-label">Número de Documento</label>
                <input asp-for="NumeroDocumento" class="form-control" />
                <span asp-validation-for="NumeroDocumento" class="text-danger"></span>
            </div>

            <!-- Nombre del Tomador -->
            <div class="form-group">
                <label asp-for="NombreTomador" class="control-label">Nombre del Tomador</label>
                <input asp-for="NombreTomador" class="form-control" />
                <span asp-validation-for="NombreTomador" class="text-danger"></span>
            </div>

            <!-- Apellido del Tomador -->
            <div class="form-group">
                <label asp-for="ApellidoTomador" class="control-label">Apellido del Tomador</label>
                <input asp-for="ApellidoTomador" class="form-control" />
                <span asp-validation-for="ApellidoTomador" class="text-danger"></span>
            </div>

            <!-- Ciudad -->
            <div class="form-group">
                <label asp-for="Ciudad" class="control-label">Ciudad</label>
                <input asp-for="Ciudad" class="form-control" />
                <span asp-validation-for="Ciudad" class="text-danger"></span>
            </div>

            <!-- País -->
            <div class="form-group">
                <label asp-for="Pais" class="control-label">País</label>
                <select asp-for="Pais" class="form-control"
                    asp-items="Html.GetEnumSelectList<Seguroquesi.Enums.Pais>()"></select>
                <span asp-validation-for="Pais" class="text-danger"></span>
            </div>

            <!-- Código Postal -->
            <div class="form-group">
                <label asp-for="CodigoPostal" class="control-label">Código Postal</label>
                <input asp-for="CodigoPostal" class="form-control" />
                <span asp-validation-for="CodigoPostal" class="text-danger"></span>
            </div>

            <!-- Fecha de Nacimiento -->
            <div class="form-group">
                <label asp-for="FechaNacimiento" class="control-label">Fecha de Nacimiento</label>
                <input asp-for="FechaNacimiento" class="form-control" type="date" />
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>

            <!-- Genero -->
            <div class="form-group">
                <label asp-for="Genero" class="control-label">Género</label>
                <select asp-for="Genero" class="form-control"
                    asp-items="Html.GetEnumSelectList<Seguroquesi.Enums.Genero>()"></select>
                <span asp-validation-for="Genero" class="text-danger"></span>
            </div>

            <!-- Ramo a contratar -->
            <div class="form-group">
                <label asp-for="Tipo" class="control-label">Ramo</label>
                <select asp-for="Tipo" class="form-control"
                    asp-items="Html.GetEnumSelectList<Seguroquesi.Enums.RamoId>()"></select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>

            <!-- Cobertura -->
            <div class="form-group">
                <label asp-for="Cobertura" class="control-label">Cobertura</label>
                <select asp-for="Cobertura" class="form-control"
                    asp-items="Html.GetEnumSelectList<Seguroquesi.Enums.CoberturaCoche>()"></select>
                <span asp-validation-for="Cobertura" class="text-danger"></span>
            </div>

            <!-- Moneda -->
            <div class="form-group">
                <label asp-for="Moneda" class="control-label">Moneda</label>
                <select asp-for="Moneda" class="form-control"
                    asp-items="Html.GetEnumSelectList<Seguroquesi.Enums.MonedaPoliza>()"></select>
                <span asp-validation-for="Moneda" class="text-danger"></span>
            </div>

            <!-- Prima -->
            <div class="form-group">
                <label asp-for="Prima" class="control-label"></label>
                <input asp-for="Prima" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Prima" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}