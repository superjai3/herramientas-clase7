@{
    ViewData["Title"] = "Promociones";
}
<div class="container my-5">
    <h2 class="mb-4 text-center">Promociones Vigentes</h2>
    <div class="row row-cols-1 row-cols-md-2 g-4">
        <div class="col">
            <div class="card border-success shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-success"><i class="bi bi-percent"></i> 20% OFF en Seguro de Auto</h5>
                    <p class="card-text">Contratá tu seguro de auto y obtené un 20% de descuento en tu primera póliza.</p>
                    <a href="/Poliza/Create" class="btn btn-success">Aprovechar</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card border-primary shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-primary"><i class="bi bi-gift"></i> Mes gratis en Seguro de Hogar</h5>
                    <p class="card-text">Protegé tu hogar y recibí el primer mes sin cargo.</p>
                    <a href="/Poliza/Create" class="btn btn-primary">Ver más</a>
                </div>
            </div>
        </div>
    </div>
</div>