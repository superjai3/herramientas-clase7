@model clase7.Models.ProductoSeguro

<h2>Detalle del Seguro: @Model.Nombre</h2>

<p><strong>Descripci√≥n:</strong> @Model.Descripcion</p>
<p><strong>Prima Base:</strong> $@Model.PrimaBase</p>
<p><strong>Tipo:</strong> @Model.Tipo</p>

<h3>Coberturas Adicionales:</h3>

@if (Model.CoberturasAdicionales != null && Model.CoberturasAdicionales.Any())
{
    <ul>
        @foreach (var cobertura in Model.CoberturasAdicionales)
        {
            <li>
                <strong>@cobertura.Nombre</strong>: $@cobertura.PrecioAdicional
            </li>
        }
    </ul>
}
else
{
    <p>No hay coberturas adicionales asociadas a este seguro.</p>
}
